<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title><%= title %></title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

    <!-- HTML5 shim 和 Respond.js 是为了让 IE8 支持 HTML5 元素和媒体查询（media queries）功能 -->
    <!-- 警告：通过 file:// 协议（就是直接将 html 页面拖拽到浏览器中）访问页面时 Respond.js 不起作用 -->
    <!--[if lt IE 9]>
    <script src="https://cdn.jsdelivr.net/npm/html5shiv@3.7.3/dist/html5shiv.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/respond.js@1.4.2/dest/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<!-- 导航区域 -->
<%- include('../sidebar', {user: user, activeClassName: 'summary'}); %>

<!-- 内容区域 开始 -->
<div class="content">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 col-md-10 col-md-offset-1">
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="inputSummaryTitle2" class="col-sm-2 control-label">标题</label>
                    <div id="inputSummaryTitle2" class="col-sm-10">
                        <input type="text" id="inputSummaryTitle" name="inputSummaryTitle">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputSummaryContent2" class="col-sm-2 control-label">内容</label>
                    <div class="col-sm-10 col-xs-10 col-md-10" id="inputSummaryContent">
                        <!--<textarea class="form-control" rows="5" name="commentContent" id="inputCommentContent" placeholder="分析"></textarea>-->
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="button" class="btn btn-default" onclick="submit()">提交</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 内容区域 结束 -->

</body>
<!-- jQuery (Bootstrap 的所有 JavaScript 插件都依赖 jQuery，所以必须放在前边) -->
<script src="https://cdn.jsdelivr.net/npm/jquery@1.12.4/dist/jquery.min.js"></script>
<!-- 加载 Bootstrap 的所有 JavaScript 插件。你也可以根据需要只加载单个插件。 -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"></script>
<script src="/javascripts/util/util.js"></script>
<script src="https://unpkg.com/wangeditor@3.1.1/release/wangEditor.min.js"></script>
<script>
  var editorContent = null;

  // 图片上传
  function upload(inputImgsData) {
    var formData = new FormData();
    formData.append('inputImgs', inputImgsData);
    $.ajax({
      url: '/common/uploadImg',
      type: 'post',
      processData: false,
      contentType: false,
      data: formData,
      success: function(res) {
        if (res.errno === 200) {
          editorContent.txt.append('<a href="'+ res.message +'"><img style="height: 100px;" src="'+ res.message +'" /></a>')
        } else {
          alert(res.message);
        }
      }
    });
  }

  // 初始化富文本编辑器
  function initEditor(id) {
    var E = window.wangEditor;
    var editor = new E('#' + id);
    editor.create();
    return editor;
  }

  $(function () {
    // 处理微信qq的截图
    document.addEventListener('paste', function(event) {
      var items = (event.clipboardData && event.clipboardData.items) || [];
      var file = null;

      if (items && items.length) {
        for (var i = 0; i < items.length; i++) {
          if (items[i].type.indexOf('image') !== -1) {
            file = items[i].getAsFile();
            break;
          }
        }
      }
      if (file) {
        var reader = new FileReader();
        reader.onload = function(e){
          // 通过e.target.result取到base64然后上传
          // 作为src设到image标签上预览
          upload(e.target.result);
        }
        reader.readAsDataURL(file);
      }
    });

    // 富文本
    editorContent = initEditor('inputSummaryContent');
  });

  // 提交函数
  function submit() {
    var body = {
      summaryContent: editorContent.txt.html(),
      summaryTitle: $('#inputSummaryTitle').val()
    };
    $.ajax({
      url: '/summary/add',
      type: 'post',
      data: body,
      success: function(res) {
        if (res.errno === 200) {
          alert(res.message);
          location.href = '/summary/list';
        } else {
          alert(res.message);
        }
      }
    });
  }
</script>
</html>